<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:elevation="1dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_especialidade_horizontal_scroll_vew"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_especialidade_horizontal_srcoll_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintEnd_toEndOf="@+id/tv_especialidade_horizontal_scroll_vew"
        app:layout_constraintStart_toStartOf="@+id/tv_especialidade_horizontal_scroll_vew"
        app:layout_constraintTop_toBottomOf="@+id/tv_especialidade_horizontal_scroll_vew" />
</android.support.constraint.ConstraintLayout>